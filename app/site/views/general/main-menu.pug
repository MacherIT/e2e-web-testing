nav.navbar.navbar-expand-lg
  .contenedor(flotante)
    .navbar-header(flotante, ng-if="isMobile")
      .logo
      button.navbar-toggler.collapsed(data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
        span.navbar-toggler-icon
    #navbar.navbar-collapse.collapse(flotante)
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href="#/", ng-class="{active: bodyClass.indexOf('home') >= 0}", esconde-menu)
            span Inicio
        li.nav-item
          a.nav-link(scroll-to-contacto, esconde-menu)
            span Contacto
    .redes-sociales(ng-if="!isMobile")
      ul
        li(style='padding-left: -5px;')
          a(href='https://www.youtube.com/channel/ant', target='_blank')
            i.fa.fa-youtube
        li
          a(href='https://www.facebook.com/ant/', target='_blank')
            i.fa.fa-facebook
        li
          a(href='https://twitter.com/ant', target='_blank')
            i.fa.fa-twitter
